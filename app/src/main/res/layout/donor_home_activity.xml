<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:id="@+id/text_display_name_charity" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_focused"
        android:id="@+id/imagePhoto_charity"
        android:layout_alignBottom="@+id/text_display_name_charity"
        android:layout_alignEnd="@+id/text_display_name_charity"
        android:layout_marginBottom="38dp" />

    <Button
        android:text="Sign out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_signout_charity"
        android:layout_centerInParent="true" />
</LinearLayout>